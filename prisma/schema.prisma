// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  cpf      String @unique
  account  String @unique
  email    String @unique
  role     String @default("Team")
  password String

  createdAt DateTime  @default(now())
  Session   Session[]
}

model Session {
  sessionId String @id @default(uuid())
  userId    String @unique

  createdAt   DateTime @default(now())
  accessToken String   @db.VarChar(249)

  user User @relation(fields: [userId], references: [id])
}

model Orders {
  id Int @id @unique @default(autoincrement())

  name   String
  amount Int
  Status String
  email  String

  createdAt DateTime @default(now())
}

model OrderDetails {
  id String @id @unique @default(uuid())

  productSku String   @unique
  product    Products @relation(fields: [productSku], references: [sku])
}

model Products {
  sku        String @id @unique
  supplierId String @unique

  name        String
  description String
  price       String
  cost        String
  stock       Int

  createdAt    DateTime      @default(now())
  supplier     Suppliers     @relation(fields: [supplierId], references: [cnpj])
  OrderDetails OrderDetails?
}

model Suppliers {
  cnpj String @id @unique

  rsocial  String
  email    String
  name     String
  address  String
  Products Products?
}
